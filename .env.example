# Meta/Facebook API Configuration
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret
META_REDIRECT_URI=https://yourapp.com/auth/facebook/callback

# OAuth Configuration
OAUTH_CALLBACK_URL=https://yourapp.com/auth/facebook/callback
OAUTH_SUCCESS_REDIRECT=https://yourapp.com/dashboard
OAUTH_ERROR_REDIRECT=https://yourapp.com/login?error=auth_failed

# Token Storage (for development only - use secure storage in production)
TOKEN_STORAGE_TYPE=memory
# TOKEN_STORAGE_TYPE=redis
# REDIS_URL=redis://localhost:6379
# TOKEN_ENCRYPTION_KEY=your-secret-encryption-key-min-32-chars

# XMCP Server Configuration
XMCP_HTTP_PORT=3002
XMCP_CORS_ORIGIN=https://yourapp.com

# Security Configuration
ENABLE_APP_SECRET_PROOF=true
ALLOWED_ORIGINS=https://yourapp.com,http://localhost:3000

# Debug Configuration
DEBUG_MODE=false
LOG_LEVEL=info