{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"],
      "@/tools/*": ["tools/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "xmcp-env.d.ts",
    "src/**/*.ts"
  ]
}